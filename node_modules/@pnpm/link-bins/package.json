		"pnpm",
		"bin"
	],
	"author": "Zoltan Kochan <z@kochan.io> (https://www.kochan.io/)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/iclanton/link-bins/issues"
	},
	"homepage": "https://github.com/iclanton/link-bins#readme",
	"peerDependencies": {
		"@pnpm/logger": "^1.0.0"
	},
	"dependencies": {
		"@pnpm/package-bins": "^1.0.0",
		"@pnpm/types": "^1.7.0",
		"@types/mz": "^0.0.32",
		"@types/node": "^9.6.5 || 10",
		"@types/ramda": "^0.25.20",
		"@zkochan/cmd-shim": "^2.2.4",
		"arr-flatten": "^1.1.0",
		"is-windows": "^1.0.2",
		"mkdirp": "0.5.1",
		"mz": "^2.7.0",
		"normalize-path": "^3.0.0",
		"p-filter": "^1.0.0",
		"ramda": "^0.25.0",
		"read-package-json": "^2.0.13"
	},
	"devDependencies": {
		"@pnpm/logger": "^1.0.1",
		"@types/mkdirp": "0.5.2",
		"@types/path-exists": "^3.0.0",
		"@types/tape": "^4.2.31",
		"@types/tempy": "^0.1.0",
		"mos": "^2.0.0-alpha.3",
		"mos-plugin-readme": "^1.0.4",
		"package-preview": "^1.0.1",
		"path-exists": "^3.0.0",
		"rimraf": "^2.6.2",
		"tape": "^4.8.0",
		"tempy": "^0.2.1",
		"ts-node": "^6.0.0",
		"tslint": "^5.8.0",
		"typescript": "^2.6.1"
